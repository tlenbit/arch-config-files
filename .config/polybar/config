module-margin-right = 1

font-0 = "Consolas:pixelsize=11;3"
font-1 = "DejaVu Sans Mono:pixelsize=8;0"
font-2 = "FontAwesome:pixelsize=9;3"
font-3 = "DejaVu Sans mono:pixelsize=11;4"

modules-left = i3
modules-center = volume
modules-right = wlan temperature battery xkeyboard date

;module-margin = 20

;modules-left = backlight-acpi
;modules-center = i3
;modules-right = volume date

tray-position = right
;tray-padding = 30
tray-transparent = false
tray-background = ${colors.background}

tray-detached = true
tray-offset-x = -50
tray-offset-y = -50


